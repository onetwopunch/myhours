<div class="row">
  <div class="col-sm-4 col-sm-offset-4 col-xs-5 col-xs-offset-5">
    <%=form_for @user, url: {:controller=>'login', action: 'create'}, html: { :class=> 'form-signin', :id=> 'signup'} do |f| %>
      <h2 class="form-signin-heading">Enter your basic info to get started </h2>
      <p id="errors"></p>
      <p>
        <%=f.text_field(:email, class: 'form-control email', placeholder: "Email address")%>
        <span id = 'err-email'></span>
      </p>      
      <p>
        <%=f.password_field(:password, class: 'form-control password', placeholder: "Password") %>
        <span id = 'err-pass'></span>
      </p>
      <p>
      	<%=password_field_tag(:rep_pass, nil, :class => 'form-control password', :placeholder =>"Re-enter Password") %>
        <span id = 'err-match'></span>
      </p>
      <p><%=submit_tag("Sign up", :class =>"btn btn-lg btn-primary btn-block")%></p>
    <%end %>

  </div>
</div>

