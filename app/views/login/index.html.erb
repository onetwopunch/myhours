<div class="row">
  <div class="col-sm-4 col-sm-offset-4 col-xs-5 col-xs-offset-5">
    
     <%=form_tag(controller: 'login', action:'authenticate', method: 'post', class: 'form-signin') do%>
      <h2 class="form-signin-heading">Please sign in 
        <small class="pull-right">
          <%= link_to("Sign up", :controller=> 'login', :action => 'signup')%>
        </small>
      </h2>   
      <%= flash[:notice] %>   
      <p><%=text_field_tag(:email, nil, :class =>'form-control', :placeholder => "Email address")%></p>
      <p><%=password_field_tag(:password, nil, :class => 'form-control', :placeholder =>"Password") %></p>
      <p><%= link_to("Forgot Password", :action => 'forgot')%></p>
      <p><%=submit_tag("Sign in", :class =>"btn btn-lg btn-primary btn-block")%></p>
    <%end %>
  </div>
</div>

